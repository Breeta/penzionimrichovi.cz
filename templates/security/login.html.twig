{% extends 'base.html.twig' %}

{% block title %} Přihlášení {% endblock %}

{% block body %}

     <div class="container mx-auto mt-20">

         <h3 class="text-center text-2xl font-bold mb-5">PŘIHLÁSIT ADMINA</h3>

         <div class="w-full max-w-xs mx-auto">

             {% if error %}
                 <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                 </div>
             {% endif %}

             <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" action="{{ path('app_login') }}" method="post">
                 <div class="mb-4">
                     <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
                         Jméno:
                     </label>
                     <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline text-center" id="username" name="_username" value="{{ last_username }}" type="text" placeholder="Jméno">
                 </div>

                 <div class="mb-6">
                     <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                         Heslo:
                     </label>
                     <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline text-center" id="password" name="_password" type="password" placeholder="******************">
                 </div>

                 <div class="mb-6">
                    <input class="mr-2 leading-tight" type="checkbox" id="remember_me" name="_remember_me" checked />
                    <label class="text-sm" for="remember_me">
                        Trvalé přihlášení
                    </label>
                 </div>

                 {#
                 If you want to control the URL the user
                 is redirected to on success (more details below)
                 <input type="hidden" name="_target_path" value="/account" />
                 #}
                 <div class="flex items-center justify-center">
                     <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                         Přihlásit
                     </button>
                 </div>
             </form>
         </div>
     </div>
{% endblock %}
