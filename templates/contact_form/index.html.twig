{% extends 'base.html.twig' %}

{% block title %}Přehled poptávek{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">


        <p class="mb-3">     <a href="{{ path('app_homepage') }}">< Homepage</a>


            <a  class="float-right" href="{{ path('app_logout') }}">Odhlásit se ></a>
        </p>

        <h1 class="text-3xl font-bold mb-8">Přehled poptávek</h1>

        <div class="bg-white shadow-md rounded-lg overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Od</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Do</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dospělí</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Děti</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pokoje</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Jméno</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kontakt</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Poznámka</th>
                        <th scope="col" class="relative px-6 py-3">
                            <span class="sr-only">Akce</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                {% for contact_form in contact_forms %}
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{ contact_form.id }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ contact_form.dateFrom ? contact_form.dateFrom|date('d.m.Y') : '' }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ contact_form.dateTo ? contact_form.dateTo|date('d.m.Y') : '' }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ contact_form.adult }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ contact_form.child }}</td>
                        <td class="px-6 py-4 text-sm text-gray-500">{{ contact_form.room }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ contact_form.name }}</td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            {{ contact_form.email }}<br>
                            {{ contact_form.phone }}<br>
                            {{ contact_form.city }}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">{{ contact_form.info }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <form method="post" action="{{ path('contact_form_delete', {'id': contact_form.id}) }}" onsubmit="return confirm('Opravdu chcete smazat tuto poptávku?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact_form.id) }}">
                                <button class="text-red-600 hover:text-red-900">Smazat</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10" class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">Nebyly nalezeny žádné poptávky.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="navigation">
            {{ knp_pagination_render(contact_forms) }}
        </div>
    </div>
{% endblock %}
